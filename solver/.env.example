PRIVATE_KEY=

# Bridge Contract Addresses
ETH_SEPOLIA_BRIDGE_ADDRESS=
BASE_SEPOLIA_BRIDGE_ADDRESS=
ARB_SEPOLIA_BRIDGE_ADDRESS=
AVAX_FUJI_BRIDGE_ADDRESS=

# RPC URLs (optional - defaults provided in rpc.ts)
ETHEREUM_SEPOLIA_RPC_URL=
BASE_SEPOLIA_RPC_URL=
ARBITRUM_SEPOLIA_RPC_URL=
AVALANCHE_FUJI_RPC_URL=

# Subgraph URLs (optional - defaults provided in subgraph.ts)
SUBGRAPH_ETH_SEPOLIA_URL=
SUBGRAPH_BASE_SEPOLIA_URL=
SUBGRAPH_ARB_SEPOLIA_URL=
SUBGRAPH_AVAX_FUJI_URL=

# Configuration
POLLING_INTERVAL=30000  # 30 seconds in milliseconds
MAX_RETRIES=3
DEBUG_MODE=false

# Pixcross Contract Addresses for Liquidation
ETH_SEPOLIA_PIXCROSS_ADDRESS=
BASE_SEPOLIA_PIXCROSS_ADDRESS=
ARB_SEPOLIA_PIXCROSS_ADDRESS=
AVAX_FUJI_PIXCROSS_ADDRESS=

# Liquidation Configuration
LIQUIDATION_ENABLED=true  # Set to true to enable automatic liquidation

# Pool Discovery Configuration
AUTO_POOL_DISCOVERY=true  # Enable automatic pool discovery using listPool function (default: true)
# When AUTO_POOL_DISCOVERY=true, pools are discovered automatically from contracts
# When AUTO_POOL_DISCOVERY=false, you must specify LIQUIDATION_POOLS manually

# Manual Pool Configuration (only used when AUTO_POOL_DISCOVERY=false)
LIQUIDATION_POOLS=  # Comma-separated list of pool IDs to monitor (e.g., pool1,pool2,pool3)

# Default Liquidation Settings (applied to all pools)
LIQUIDATION_MAX_TOKENS=100  # Default maximum tokens to check per liquidation call
LIQUIDATION_CHECK_INTERVAL=60000  # Default check interval in milliseconds (1 minute)

# Per-pool liquidation settings (optional)
# LIQUIDATION_MAX_TOKENS_POOL1=50
# LIQUIDATION_CHECK_INTERVAL_POOL1=30000
# LIQUIDATION_ENABLED_POOL1=true
